{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ESNext",
    "moduleResolution": "bundler",
    "strict": true,
    "noImplicitAny": true,
    "useDefineForClassFields": true,

    "sourceMap": true,
    "outDir": "dist",

    "baseUrl": "./src",
    "paths": {
      "@/*": ["src/*"]
    },

    "types": ["vite/client"]
  },
  "include": ["src", "src/libs"]
}